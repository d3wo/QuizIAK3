<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dewo.quiz2.Page3Activity">




    <TextView
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textColor="#E53935"
        android:text="Pertanyaan 2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <TextView
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#E53935"
        android:text="Berikut ini merupakan binatang yang dapat hidup di dua alam"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp">
        <CheckBox android:id="@+id/checkbox_kepiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kepiting"
            android:textColor="#E53935"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_kura_kura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kura-kura"
            android:textColor="#E53935"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_katak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Katak"
            android:textColor="#E53935"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_anjing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anjing"
            android:textColor="#E53935"
            android:onClick="onCheckboxClicked"/>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Simpan"
        android:textColor="@android:color/white"
        android:background="#E53935"
        android:id="@+id/btnSelanjutnya"
        android:onClick="selanjutnya"/>


</RelativeLayout>
